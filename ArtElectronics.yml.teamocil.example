windows:
  - name: "ArtElectronics"
    root: "~/rails/opensource/ArtElectronics"
    filters:
      before: "rvm use ruby-2.0.0-p353; rvm gemset use art_electronics --create"
    layout: tiled
    panes:
      - cmd: "clear;"
      - cmd: "clear;"
      - cmd: "cd spec/dummy_app; clear"
      - cmd: "cd spec/dummy_app; clear; rake db:bootstrap RAILS_ENV=test; rspec"
