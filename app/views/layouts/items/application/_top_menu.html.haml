.navbar
  .navbar-inner
    .container
      -#
        %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
      %a.brand(href=root_url) Home
      .container.nav-collapse
        %ul.nav
          - Hub.with_title(:top_pages).pages.each do |page|
            %li= link_to page.title, page_url(page.slug)

          %li= link_to 'Форумы', '#'

          %li
            %a
              \|

          - if current_user
            %li
              = link_to cabinet_url do
                Cabinet: #{ current_user.login }
            %li
              = link_to t('sessions.logout'), logout_url, method: :delete
          - else
            %li= link_to  'Вход', login_url
            %li= link_to  'Регистрация', signup_url

