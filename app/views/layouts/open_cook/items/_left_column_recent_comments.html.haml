- content_for :left_column do
  - comments = Comment.with_state(:published).where(commentable_state: :published).limit(5)

  - unless comments.blank?
    .recent_comments
      %h3 Новые комментарии
      .wrp
        - comments.each do |comment|
          .comment
            %p.title= link_to comment.commentable_title, comment.commentable_url
            %p.content= comment.content
            %p.info= comment.created_at.to_s(:db)
        .comments
          %p= link_to "Все комментарии", '#'
            