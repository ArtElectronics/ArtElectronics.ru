-# It's good to be bad!

-# Logick
- object       ||= @object
- klass_name     = object.ctrl_name.singularize
- user_pub_scope = current_user.admin? ? :for_manage : :published_set
- selector_hubs  = Hub.of_(object.ctrl_name).send(user_pub_scope)
- selected_hub   = object.try(:hub)

-# View
- unless selector_hubs.blank?
  .field
    = label_tag :hub_id, 'Раздел: '
    = select_tag "#{klass_name}[hub_id]", nested_options(selector_hubs, selected: selected_hub), class: :nested_options