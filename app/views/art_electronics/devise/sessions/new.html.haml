= form_for(resource, :as => resource_name, :url => session_path(resource_name), remote: true, html: { data: { type: :json }, role: :form } ) do |f|
  .form-group
    = f.label :email
    = f.text_field :email, :autofocus => true, class: 'form-control'
  .form-group
    = f.label :password
    = f.password_field :password, class: 'form-control'
  
  - if devise_mapping.rememberable?
    %div
      = f.check_box :remember_me
      = f.label :remember_me, t('devise.sessions.remember_me')
  .form-group
  = f.submit t('devise.sessions.login'), class: 'btn btn-info'

%br
%br

%p= render "devise/shared/links"
