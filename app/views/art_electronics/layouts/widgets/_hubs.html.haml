- unless @hubs.blank?
  .panel.panel-success
    .panel-heading
      %h3 Разделы

    .panel-body
      - @hubs.each do |hub|
        - current = (@hub == hub) ? :current : nil
        = link_to hub_url(hub.slug), class: current do
          %p.nobr
            = raw "&nbsp;&nbsp;&nbsp;" * (hub.level - 1)
            = hub.title
            - if hub.pubs_published_count != 0
              %b
                (#{ hub.pubs_published_count })