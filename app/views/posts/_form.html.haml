
= form_for @post do |f|
  - if @post.errors.any?
    #error_explanation
      %h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
      %ul
        - @post.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :title
    = f.text_field :title
  .field
    %p
      %b Вводная часть
    = f.text_area :intro, class: :redactor_intro
  .field
    %p
      %b Основное содержимое
    = f.text_area :content, class: :redactor_content
  .field
    = f.label :state
    = f.text_field :state
  .actions
    = f.submit 'Save'
