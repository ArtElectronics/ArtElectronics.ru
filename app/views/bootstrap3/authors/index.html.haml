%h1= t('authors.list')
= paginate @authors

%table.table.table-striped.table-hover
  %thead
    <!-- #TODO align titles by center -->
    %tr
      %th 
        = t('authors.name')
      %th
        = t('authors.description')
      %th
        = t('authors.short_description')
      %th
        = t('authors.user_id')
      %th
        = t('authors.created_at')

  %tbody
    - @authors.each do |author|
      %tr
        %td= author.name
        %td= author.description
        %td= author.short_description
        %td= author.user_id
        %td= author.created_at

        %td 
          .dropdown
            %button.btn.btn-default.dropdown-toggle(type='button' data-toggle="dropdown") 
              %span.caret
            %ul.dropdown-menu(role="menu")
              %li= link_to('Show', author)
              %li= link_to 'Edit', edit_author_path(author)
              %li= link_to 'Destroy', author, method: :delete, data: { confirm: 'Are you sure?' }
= paginate @authors


