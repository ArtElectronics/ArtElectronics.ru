!!! 5
%html(lang="ru")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "Bootstrap3"
    %link(href="favicon.ico" rel="shortcut icon")

    = stylesheet_link_tag    [:application, AppConfig.theme].join('_')
    = javascript_include_tag [:application, AppConfig.theme].join('_')
    = csrf_meta_tags
  %body
    .container
      .row
        .col-md-12
          = render partial: "layouts/items/sections"
          = render partial: "layouts/items/top_menu"
      .row
        .col-md-3
          = render partial: "layouts/widgets/express_nav"
          = yield :hubs_widget

          = yield :role_sidebar
          = yield :comments_sidebar
          = yield :recent_comments_widget

          = yield :tags_widget
          = yield :tag_search_widget
        .col-md-9
          = render partial: 'the_notification/flash'
          = yield
          = yield :role_main
          = yield :comments_main

      .row
        .col-md-12
          = render partial: "layouts/items/footer"

    =# stylesheet_link_tag "//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap-glyphicons.css"
    = stylesheet_link_tag "//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.min.css"